{
    "name": "Exp1",
    "n_gpu": 3,
    "arch": {
        "type": "BioSleepX",
        "args": {
        }
    },
    "data_loader": {
        "args":{
            "batch_size": 1024,
            "num_folds": 10
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0.001,
            "amsgrad": true
        }
    },
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 100,
            "eta_min": 1e-6
        }
    },
    "loss": "weighted_CrossEntropyLoss",
    "metrics": [
        "accuracy",
        "f1",
        "kappa"
    ],
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 30,
        "verbosity": 2,
        "monitor": "min val_loss"
    }
}
